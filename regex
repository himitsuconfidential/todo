    <script type="text/javascript">

    function browser_encrypt(){
        var text = document.getElementById("text").value;
        var regexInput = document.getElementById("regexInput").value;
        var regexOutput = document.getElementById("regexOutput").value;
        document.getElementById("demo0").innerText = '';
        document.getElementById("demo1").innerHTML = "<pre>" + text.replace(new RegExp(regexInput, 'g'),regexOutput) + "</pre>";
    }

    </script>
